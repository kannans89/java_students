<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
 <class name="com.techlabs.entity.User" table="USERS">
 <id name="id" type="int"  column="user_id"/>

 <property name="name" type="string" column="user_name" not-null="true"></property>
 <property name="balance" type="double" column="user_balance" not-null="true"></property>
 
 </class>
 
 </hibernate-mapping> 