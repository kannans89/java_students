<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
 <class name="com.techlabs.entity.Employee" table="EMPLOYEES">
 <id name="id" type="int"  column="emp_id"/>

 <property name="name" type="string" column="emp_name" not-null="true"></property>
 <property name="location" type="string" column="emp_location" not-null="true"></property>
 <property name="salary" type="double" column="emp_salary" not-null="true"></property>
 
 </class>
 
 </hibernate-mapping> 