<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.techlabs.entity.Department" table="DEPARTMENTS">
		<id name="deptId" type="int" column="dept_id" />
		<property name="deptName" type="string" column="dept_name"
			not-null="true"></property>
		<property name="deptLocation" type="string" column="dept_location"
			not-null="true"></property>

	</class>

</hibernate-mapping> 